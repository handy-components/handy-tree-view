{
  "name": "@handy-components/handy-tree-view",
  "version": "1.0.0",
  "description": "A fully-featured, accessible tree view component for React with Material-UI support",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
